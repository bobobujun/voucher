/* pages/code/code.wxss */
.page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* padding:64rpx; */
  background:rgba(255,222,178,1);
}
.box{
  margin-top: 64rpx;
  width:622rpx;
  height:784rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 8rpx 0px rgba(166,166,166,0.5);
  border-radius:16rpx;
}
.title{
  margin-top: 80rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.qr-code{
  width:440rpx;
  height:440rpx;
  display: block;
  margin-top: 40rpx;
}
.btn-box{
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-top: 80rpx;
}
.cancel{
  width: 240rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius:44rpx;
  border:2rpx solid rgba(255,151,81,1);
  font-size:28rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(255,151,81,1);
  margin: 10rpx;
}
.order{
  width: 240rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius:44rpx;
  font-size:28rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  background: #ff9751;
  color: #ffffff;
  margin: 10rpx;
}
.pop-login-box{
  width:520rpx;
  background:rgba(255,255,255,1);
  border-radius:16rpx;
}
.pop-login-content{
  padding: 52rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(250,248,245,1);
}
.login-title{
  font-size:36rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(102,102,102,1);
  margin-bottom: 26rpx;
}
.login-content{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.pop-login-bot{
  display: flex;
  font-size: 36rpx;
}
.bot-left{
  flex: 1;
  padding: 34rpx;
  text-align: center;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  border-right: 1px solid rgba(250,248,245,1);
}
.bot-sure{
  flex: 1;
  padding: 34rpx;
  text-align: center;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(255,151,81,1);
}