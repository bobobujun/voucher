}
.sendcode{
  color: #FF9751;
}
.btn{
  margin-top: 446rpx;
  width:600rpx;
  height:98rpx;
  background:rgba(0,194,95,1);
  border-radius:4rpx;
  font-size:32rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
