.page{
  width: 100%;
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.desc{
  margin-top: 220rpx;
  font-size:32rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(153,153,153,1);
}
.str{
  color: green;
}
.phone-num{
  margin-top: 20rpx;
  font-size:64rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
